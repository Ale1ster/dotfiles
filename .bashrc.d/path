if [[ -z $SET_PATH ]]; then
    PATH=$HOME/bin:$PATH
    PATH=$HOME/bin/excluded:$PATH
    PATH=$HOME/bin/remotecopy:$PATH
    PATH=$HOME/bin/git-subtree:$PATH
    PATH=$HOME/bin/moreutils:$PATH
    PATH=$HOME/.bashrc.d/resty:$PATH

    export PATH
    export SET_PATH=1
fi

function vipath() {
    TMP=`mktemp -t tmp.XXXXXXXXX`;
    editpath $1 2> $TMP;
    if [ "$?" -ne 0 ]; then
        cat $TMP;
    else
        source $TMP
    fi
    rm -f $TMP
}
